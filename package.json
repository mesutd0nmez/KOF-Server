{
  "name": "kof-server",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/trkyshorty/KOF-Server.git",
  "author": "TÃ¼rkay Tanrikulu <trky.shorty@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development node -r dotenv/config ./index.js",
    "docker:start": "yarn docker:build && docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "yarn docker:build && docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:build": "docker-compose build",
    "lint": "eslint index.js ./src/**/*.js",
    "lint:fix": "eslint --fix index.js ./src/**/*.js",
    "prettier": "prettier --check index.js ./src/**/*.js",
    "prettier:fix": "prettier --write index.js ./src/**/*.js"
  },
  "dependencies": {
    "axios": "^1.6.3",
    "bcryptjs": "^2.4.3",
    "byte-buffer": "https://github.com/trkyshorty/byte-buffer#build",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "events": "^3.3.0",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "glob": "^10.3.10",
    "iconv-lite": "^0.6.3",
    "jimp": "^0.22.10",
    "jsonwebtoken": "^9.0.2",
    "lzfjs": "^1.0.1",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "net": "^1.0.2",
    "path": "^0.12.7",
    "rate-limiter-flexible": "^4.0.0",
    "shopier-api": "^1.1.3",
    "snappy": "^7.2.2",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1"
  },
  "type": "module",
  "plugins": [
    "import"
  ],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ],
    "import/no-unresolved": 2,
    "import/no-commonjs": 2,
    "import/extensions": [
      2,
      "ignorePackages"
    ]
  }
}
